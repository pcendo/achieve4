<%= stylesheet_link_tag "application" %>

<div class="container">

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Address</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @favorites_places.each do |place| %>
        <tr>
          <td><%= place.name %></td>
          <td><%= place.latitude %></td>
          <td><%= place.longitude %></td>
          <td><%= place.address %></td>
          <td>
              <%= button_to "show", list2_albums_path, params: { place_id: place.id }, method: :get %>
          </td>
          <td>
              <%= button_to "解除", favorite_path(place.id), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
